<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jogo Ping Pong</title>
    <style>
        * {
            overflow: hidden;
            margin: 0;
            padding: 0;
        }
    </style>
</head>

<body>
    <canvas></canvas>
    <script>
        const canvasEl = document.querySelector("canvas");
        const canvasCtx = canvasEl.getContext("2d");
        const gapX = 10;
        const mouse = { x: 0, y: 0 }

        const campo = {
            w: window.innerWidth,
            h: window.innerHeight,
            desenhar: function() {
                canvasCtx.fillStyle = "#286047";
                canvasCtx.fillRect(0, 0, this.w, this.h);
            },
        };

        const linha = {
            w: 15,
            h: campo.h,
            desenhar: function() {
                canvasCtx.fillStyle = "#ffffff";
                canvasCtx.fillRect(campo.w / 2 - this.w / 2, 0, this.w, this.h);
            },
        };

        const raqueteEsquerda = {
            x: gapX,
            y: 0,
            w: linha.w,
            h: 250,
            _move: function() {
                this.y = mouse.y - this.h / 2
            },
            desenhar: function() {
                canvasCtx.fillStyle = "#ffffff";
                canvasCtx.fillRect(this.x, this.y, this.w, this.h);
                this._move()
            }
        };

        const raqueteDireita = {
            x: campo.w - linha.w - gapX,
            y: 100,
            w: linha.w,
            h: 250,
            speed: 2,
            _move: function () {
                if(this.y +this.h/2 < bola.y + bola.raio){
                    this.y+= this.speed
                } else{
                    this.y -= this.speed
                }
                
            },
            speedup: function() {
                this.speed+=1
            },
            desenhar: function() {
                canvasCtx.fillStyle = "#ffffff";
                canvasCtx.fillRect(this.x, this.y, this.w, this.h); 
                this._move()
            }
        };
        const placar = {
            human: 0,
            robot: 0,
            pontohumano: function(){
                this.human++
            },
            pontorobo: function(){
                this.robot++
            },
            desenhar: function() {
                canvasCtx.font = "bold 72px arial";
                canvasCtx.textAlign = "center";
                canvasCtx.textBaseline = "top";
                canvasCtx.fillStyle = '#01341D';
                canvasCtx.fillText(this.human, campo.w / 4, 50);
                canvasCtx.fillText(this.robot, campo.w / 4 + campo.w / 2, 50);

            },
                }
        const bola = {
            x: campo.w / 2, 
            y: campo.h / 2,
            raio: 20,
            speed: 5,
            directionY: 1,
            directionX: 1,
            _calcposition: function() {

                if(this.x > campo.w - this.raio - raqueteDireita.w - gapX) {
                    if(this.y + this.raio > raqueteDireita.y && this.y - this.raio < raqueteDireita.y + raqueteDireita.h) {
                        this._reverseX()
                    } else {
                        placar.pontohumano()
                        this._pointup()
                        

                    }
                }
                if(this.x < this.raio + raqueteEsquerda.w + gapX) {
                    if(this.y + this.raio > raqueteEsquerda.y && this.y - this.raio < raqueteEsquerda.y + raqueteEsquerda.h) 
                    {
                        this._reverseX()
                    } else {                            
                        placar.pontorobo()
                        this._pointup()
                    
                    }
                }

                
                if(this.y > campo.h - this.raio && this. directionY >0) {
                    this._reverseY()
                }
                if(this.y < 0 + this.raio && this. directionY < 0) {
                    this._reverseY()
                }
                
            },
            _reverseY: function() {
                this.directionY *= -1
            },
            _reverseX: function() {
                this.directionX *= -1
            },
            _move: function () {
                this.x += this.directionX * this.speed
                this.y += this.directionY * this.speed

            },
            speedUp: function(){
                this.speed +=3
            },
            _pointup: function(){
                this.x = campo.w / 2
                this.y = campo.h / 2
                this.speedUp()
                raqueteDireita.speedup()

            },
            desenhar: function () {
                canvasCtx.fillStyle = "#ffffff";
                canvasCtx.beginPath();
                canvasCtx.arc(this.x, this.y, this.raio, 0, 2 * Math.PI, false);
                canvasCtx.fill()

                this._calcposition()
                this._move()
            },

        };

        function setup() {
            canvasEl.width = window.innerWidth;
            canvasEl.height = window.innerHeight;
        }

        function desenho() {
            campo.desenhar();
            linha.desenhar();
            raqueteEsquerda.desenhar();
            raqueteDireita.desenhar();
            placar.desenhar()
            bola.desenhar()
            
        }

        

        window.animateFrame = (function() {
            return (
                window.requestAnimationFrame ||
                window.webkitRequestAnimationFrame ||
                window.mozRequestAnimationFrame ||
                window.oRequestAnimationFrame ||
                window.msRequestAnimationFrame ||
                function (callback) {
                    return window.setTimeout(callback, 1000 /60)
                }
            )
        })()

        function main() {
            setup()
            animateFrame(main)
            desenho()

        }

        setup()
        main()
        canvasEl.addEventListener('mousemove', function(e){
            mouse.x = e.pageX
            mouse.y = e.pageY

            
        })
    </script>
</body>
</html>
